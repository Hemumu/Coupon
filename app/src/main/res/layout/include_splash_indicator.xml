<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <ImageView
        android:id="@+id/splash_indicator_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/splash_indicator_checked" />

    <ImageView
        android:id="@+id/splash_indicator_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@id/splash_indicator_one"
        android:background="@drawable/splash_indicator_unchecked" />

    <ImageView
        android:id="@+id/splash_indicator_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@id/splash_indicator_two"
        android:background="@drawable/splash_indicator_unchecked" />
</RelativeLayout>